@model IEnumerable<InventoryRepo.Models.ViewModel.ProductView>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="card mb-3">
    <div class="card-header" style="background: linear-gradient(45deg, #47cebe, #ef4a82); font-family: 'PT Serif', serif, sans-serif;font-size: 20px;color: white;">
        <i class="fa-solid fa-box-open"></i>
        <b>Products</b>
        <a href="../Product/Add" class="btn btn-info float-end" style="color: white;font-size: 20px;"><i class="fa fa-plus"></i> Add New</a>
    </div>


<div class="card-body">
        <div class="table-container">
        <table class="table table-bordered" id="datatablesSimple">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StockQuantity)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.ProductImage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StockQuantity)
                    </td>
                   
                    <td>
                                <img src="~/Upload/files/@item.ProductImage" alt="Product Image" style="max-width: 100px; max-height: 100px;border-radius: 50%;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.ProductId">
                             <div class="edit-icon-container">
                                 <i class="fa-solid fa-pen-to-square"></i>
                             </div>
                        </a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.ProductId">
                             <div class="delete-icon-container">
                                 <i class="fa-solid fa-trash"></i>
                             </div>
                        </a>
               
                    </td>
                </tr>
               }
                </tbody>
                </table>
    </div>
</div>
</div>