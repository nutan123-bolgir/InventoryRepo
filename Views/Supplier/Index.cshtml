@model IEnumerable<InventoryRepo.Models.Supplier>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="card mb-3">
    <div class="card-header" style="background: linear-gradient(45deg, #47cebe, #ef4a82); font-family: 'PT Serif', serif, sans-serif;font-size: 20px;color: white;">
        <i class="fa-solid fa-people-carry-box"></i>
        <b>Suppliers</b>
        <a href="../Supplier/Add" class="btn btn-info float-end" style="color: white;font-size: 20px;"><i class="fa fa-plus"></i> Add New</a>
    </div>


<div class="card-body">
    <div class="table-container">
        <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SupplierName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactPerson)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SupplierPhoto)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactPerson)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                    <td>
                        <img src="~/Upload/files/@item.SupplierPhoto" alt="supplier photo" style="max-width: 100px; max-height: 100px;" />
                    </td>
                <td>
                        <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.SupplierId">
                            <div class="edit-icon-container">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </div>
                        </a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.SupplierId">
                            <div class="delete-icon-container">
                                <i class="fa-solid fa-trash"></i>
                            </div>
                        </a>
               
                </td>
            </tr>
    }
        </tbody>
    </table>
    </div>
</div>
</div>